{
  "name": "koa-route-controller",
  "version": "0.1.3",
  "description": "A middleware kits to create routes and controllers with koa.js",
  "main": "dist/index.js",
  "files": ["dist", "src"],
  "scripts": {
    "test":
      "mocha --compilers  js:babel-core/register --require babel-polyfill  ./test/**/*.test.js",
    "init": "mkdir dist",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run init && flow check ",
    "build": "babel ./src -d ./dist --source-maps ",
    "start": "npm run dev",
    "pretest": "npm run build",
    "dev": "npm test -- -w"
  },
  "keywords": ["koa", "controller", "route", "router"],
  "author": "castrolol",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "flow-bin": "^0.65.0",
    "mocha": "^5.0.1",
    "sinon": "^4.3.0",
    "sinon-chai": "^2.14.0"
  },
  "dependencies": {
    "path-parser": "^3.0.1",
    "uuid": "^3.2.1"
  }
}
